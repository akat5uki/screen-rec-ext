{
  "manifest_version": 3,
  "name": "Screen Recorder",
  "version": "1.0",
  "description": "Record screen with audio and save as .webm",
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "icons/icon.png"
  },
  "permissions": ["tabCapture", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "48": "icons/icon.png"
  }
}
